<div id="ibTopHeader" class="ib-top-header">
    <div class="ib-top-header-left-container">
        <div class="ib-top-header-structure">
            <div class="ib-top-header-structure-logo">
                <a href="/tester">
                    <img class="brand-img" src="assets/img/logo.png" alt="Idea Bank Logo" />
                </a>
            </div>
        </div>
        <div class="header-toolbar-options">
            <div class="profile-dd-option">
                <div class="prof-counter">
                    <% if(userinfo.profile_img == null) { %>
                        <span class="profile-img user-pic"></span>
                    <% } else { %>
                        <img class="profile-img" src="<%= userinfo.profile_img %>"/>
                    <% } %>
                </div>
            </div>
            <div class="prof-dropdown-hide">
                <div class="prof-dropdown">
                    <div class="dropdown-container">
                        <div class="dd-option-list">
                            <div class="dd-header-item">
                                <p><b> Hello <%= userinfo.username %> </b></p>
                            </div>
                            <a href="/profile" class="dd-options-list-item">Add New Person</a>
                            <a href="/auth/logout" class="dd-options-list-item">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
